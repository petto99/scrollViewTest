            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_04"
            android:background="#f4eb86"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/but_05"
            android:background="#e68b61"
            android:textColor="#ffffff"
